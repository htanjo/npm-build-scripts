{
  "private": true,
  "scripts": {
    "start": "parallelshell \"npm run serve\" \"npm run watch:styles\" \"npm run watch:scripts\"",
    "serve": "browser-sync start --server public --no-notify --files public/",
    "styles": "node-sass public/ --output public/ && postcss --use autoprefixer --replace 'public/**/*.css'",
    "test": "eslint --ignore-pattern '**/*.min.js,**/vendor/**' public/",
    "build": "npm test && parallelshell \"npm run styles\" \"imagemin public/ public/\"",
    "watch:styles": "chokidar 'public/**/*.scss' -c \"npm run styles\"",
    "watch:scripts": "chokidar 'public/**/*.js' -c \"npm test\""
  },
  "devDependencies": {
    "autoprefixer": "^6.2.3",
    "browser-sync": "^2.11.0",
    "chokidar-cli": "^1.2.0",
    "eslint": "^1.10.3",
    "eslint-config-xo": "^0.9.1",
    "imagemin-cli": "^2.1.0",
    "node-sass": "^3.4.2",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^2.3.3"
  },
  "eslintConfig": {
    "extends": "xo",
    "env": {
      "browser": true
    },
    "rules": {
      "indent": [
        2,
        2,
        {
          "SwitchCase": 1
        }
      ]
    }
  }
}
